<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- 按下状态 -->
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <solid android:color="#CCEDE7F6"/> <!-- 稍深的背景颜色 -->
            <corners android:radius="4dp"/> <!-- 圆角半径 -->
            <stroke android:width="2dp" android:color="#3CA4E0"/> <!-- Gura蓝色边框 -->
        </shape>
    </item>
    
    <!-- 焦点状态 -->
    <item android:state_focused="true">
        <shape android:shape="rectangle">
            <solid android:color="#CCEDE7F6"/> <!-- 稍深的背景颜色 -->
            <corners android:radius="4dp"/> <!-- 圆角半径 -->
            <stroke android:width="2dp" android:color="#3CA4E0"/> <!-- Gura蓝色边框 -->
        </shape>
    </item>

    <!-- 选中状态 -->
    <item android:state_selected="true">
        <shape android:shape="rectangle">
            <solid android:color="#CCEDE7F6"/> <!-- 稍深的背景颜色 -->
            <corners android:radius="4dp"/> <!-- 圆角半径 -->
            <stroke android:width="2dp" android:color="#3CA4E0"/> <!-- Gura蓝色边框 -->
        </shape>
    </item>
    
    <!-- 默认状态 -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#99EDE7F6"/> <!-- 原背景颜色 -->
            <corners android:radius="4dp"/> <!-- 圆角半径 -->
            <stroke android:width="2dp" android:color="#00000000"/> <!-- 透明边框 -->
        </shape>
    </item>
</selector> 