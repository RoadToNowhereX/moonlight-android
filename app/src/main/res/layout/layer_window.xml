<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layer_windows"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <!-- edittext窗口  -->
    <FrameLayout
        android:id="@+id/edittext_window"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#C0303030"
        android:visibility="gone">
        <!--   浮动窗口   -->
        <FrameLayout
            android:layout_width="300dp"
            android:layout_height="200dp"
            android:layout_gravity="center"
            android:background="#202020">
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center">
                <EditText
                    android:id="@+id/edittext_window_text"
                    android:layout_width="200dp"
                    android:layout_height="50dp"/>
                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="200dp"
                    android:layout_height="50dp">
                    <Button
                        android:id="@+id/edittext_window_confirm"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:text="确认"/>
                    <Button
                        android:id="@+id/edittext_window_canel"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:text="取消"/>
                </LinearLayout>
            </LinearLayout>
        </FrameLayout>
    </FrameLayout>
    <!-- text窗口 -->
    <FrameLayout
        android:id="@+id/text_window"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#C0303030"
        android:visibility="gone">
        <!--   浮动窗口   -->
        <FrameLayout
            android:layout_width="300dp"
            android:layout_height="200dp"
            android:layout_gravity="center"
            android:background="#202020">
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center">
                <TextView
                    android:id="@+id/text_window_text"
                    android:layout_width="200dp"
                    android:layout_height="50dp"
                    android:text="是否删除:"
                    android:textSize="20dp"
                    android:gravity="center"/>
                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <Button
                        android:id="@+id/text_window_confirm"
                        android:layout_width="100dp"
                        android:layout_height="50dp"
                        android:text="确认"/>
                    <Button
                        android:id="@+id/text_window_canel"
                        android:layout_width="100dp"
                        android:layout_height="50dp"
                        android:text="取消"/>
                </LinearLayout>
            </LinearLayout>
        </FrameLayout>
    </FrameLayout>

</FrameLayout>