<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <!--  上半部分   -->
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2">
        <!--  图示部分   -->
        <FrameLayout
            android:layout_width="200dp"
            android:layout_height="match_parent">
            <!-- 按钮 -->
            <FrameLayout
                android:id="@+id/button_drawing"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:visibility="visible">
                <TextView
                    android:id="@+id/button_drawing_text"
                    android:layout_width="150dp"
                    android:layout_height="150dp"
                    android:background="@drawable/shape_1_button"
                    android:text="A"
                    android:textSize="40dp"
                    android:tag="29"
                    android:gravity="center"
                    android:layout_gravity="center"/>
            </FrameLayout>
            <FrameLayout
                android:id="@+id/switch_drawing"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:visibility="gone">
                <TextView
                    android:id="@+id/switch_drawing_text"
                    android:layout_width="150dp"
                    android:layout_height="150dp"
                    android:background="@drawable/confirm_square_border"
                    android:text="A"
                    android:textSize="40dp"
                    android:tag="29"
                    android:gravity="center"
                    android:layout_gravity="center"/>
            </FrameLayout>
            <!--  十字键  -->
            <LinearLayout
                android:id="@+id/pad_drawing"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:visibility="gone">
                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1">
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center"/>
                    <TextView
                        android:id="@+id/pad_drawing_up"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:background="@drawable/confirm_square_border"
                        android:tag="51"
                        android:text="W"/>
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:layout_weight="1" />
                </LinearLayout>
                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1">
                    <TextView
                        android:id="@+id/pad_drawing_left"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:background="@drawable/square_border"
                        android:tag="29"
                        android:text="A"/>
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center" />
                    <TextView
                        android:id="@+id/pad_drawing_right"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:background="@drawable/square_border"
                        android:tag="32"
                        android:text="D"/>
                </LinearLayout>
                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1">
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center"
                        />
                    <TextView
                        android:id="@+id/pad_drawing_down"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:background="@drawable/square_border"
                        android:tag="47"
                        android:text="S"/>
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center"/>
                </LinearLayout>
            </LinearLayout>
        </FrameLayout>
        <!--  设置部分   -->
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">
            <!--  名称设置以及按钮创建   -->
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="100">
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:text="名称:"
                    android:gravity="center"
                    android:layout_weight="2"/>
                <EditText
                    android:id="@+id/add_element_name"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:text="A1"
                    android:layout_weight="3"/>
                <Button
                    android:id="@+id/add_element_button"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="2"
                    android:text="确定"/>
            </LinearLayout>
            <!--  按钮类型选择部分   -->
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="100">
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:text="按键类型："
                    android:gravity="center"
                    android:layout_weight="1"/>

                <Spinner
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="3"
                    android:entries="@array/element_type_arrays" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="100">
                <Button

                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="100"
                    android:text="删除按键"/>
                <Button
                    android:id="@+id/edit_element"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="100"
                    android:text="编辑按键"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
    <!--  下半部分   -->
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="3">
        <!--  键盘部分   -->
        <include layout="@layout/layout_keyboard"/>
    </LinearLayout>

</LinearLayout>