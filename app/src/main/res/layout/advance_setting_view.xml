<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:visibility="gone">
    <LinearLayout
        android:id="@+id/advance_setting_layout"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/advance_setting_background"
        android:visibility="visible">
        <RadioGroup
            android:id="@+id/advance_setting_radio_group"
            android:layout_width="150dp"
            android:layout_height="match_parent"
            android:background="@color/advance_setting_background">
            <RadioButton
                android:id="@+id/advance_setting_1_radio_button"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:button="@null"
                android:background="@color/advance_setting_background"
                android:gravity="center"
                android:text="setting 1"/>
            <View
                android:layout_width="150dp"
                android:layout_height="1dp"
                android:background="@color/advance_setting_line"/>
            <RadioButton
                android:id="@+id/advance_setting_2_radio_button"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:button="@null"
                android:background="@color/advance_setting_button_background"
                android:gravity="center"
                android:text="setting 2"/>
            <View
                android:layout_width="150dp"
                android:layout_height="1dp"
                android:background="@color/advance_setting_line"
                android:visibility="gone"/>
            <RadioButton
                android:id="@+id/advance_setting_3_radio_button"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:button="@null"
                android:background="@color/advance_setting_button_background"
                android:gravity="center"
                android:text="setting 3"
                android:visibility="gone"/>
        </RadioGroup>
        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="@color/advance_setting_line"/>
        <!--    setting1    -->
        <LinearLayout
            android:id="@+id/advance_setting_1_linear_layout"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="visible">
            <!--   左半部分    -->
            <ScrollView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp">
                <LinearLayout
                    android:id="@+id/keyboard_layout_container"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:textSize="25dp"
                        android:text="布局选择"
                        android:gravity="center"/>
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/advance_setting_line"
                        android:layout_marginBottom="15dp"/>
                    <Button
                        android:id="@+id/add_layout_button"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:text="+"
                        android:textSize="25dp"/>
                </LinearLayout>
            </ScrollView>
            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="@color/advance_setting_line"/>
            <!--   右半部分    -->
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1">
                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginStart="10dp"
                    android:layout_marginEnd="10dp">
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:gravity="center_vertical"
                        android:layout_weight="100"
                        android:text="键盘"/>
                    <Switch
                        android:id="@+id/keyboard_enable_switch"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="40"/>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
        <!--    setting2    -->
        <LinearLayout
            android:id="@+id/advance_setting_2_linear_layout"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="gone">
            <!--  上半部分   -->
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="2">
                <!--  图示部分   -->
                <FrameLayout
                    android:layout_width="200dp"
                    android:layout_height="match_parent">
                    <!-- 按钮 -->
                    <FrameLayout
                        android:id="@+id/button_drawing"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:visibility="visible">
                        <TextView
                            android:id="@+id/button_drawing_text"
                            android:layout_width="150dp"
                            android:layout_height="150dp"
                            android:background="@drawable/button"
                            android:text="A"
                            android:textSize="40dp"
                            android:tag="29"
                            android:gravity="center"
                            android:layout_gravity="center"/>
                    </FrameLayout>
                    <FrameLayout
                        android:id="@+id/switch_drawing"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:visibility="gone">
                        <TextView
                            android:id="@+id/switch_drawing_text"
                            android:layout_width="150dp"
                            android:layout_height="150dp"
                            android:background="@drawable/confirm_square_border"
                            android:text="A"
                            android:textSize="40dp"
                            android:tag="29"
                            android:gravity="center"
                            android:layout_gravity="center"/>
                    </FrameLayout>
                    <!--  十字键  -->
                    <LinearLayout
                        android:id="@+id/pad_drawing"
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:visibility="gone">
                        <LinearLayout
                            android:orientation="horizontal"
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="1">
                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:gravity="center"/>
                            <TextView
                                android:id="@+id/pad_drawing_up"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:gravity="center"
                                android:background="@drawable/confirm_square_border"
                                android:tag="51"
                                android:text="W"/>
                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:gravity="center"
                                android:layout_weight="1" />
                        </LinearLayout>
                        <LinearLayout
                            android:orientation="horizontal"
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="1">
                            <TextView
                                android:id="@+id/pad_drawing_left"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:gravity="center"
                                android:background="@drawable/square_border"
                                android:tag="29"
                                android:text="A"/>
                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:gravity="center" />
                            <TextView
                                android:id="@+id/pad_drawing_right"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:gravity="center"
                                android:background="@drawable/square_border"
                                android:tag="32"
                                android:text="D"/>
                        </LinearLayout>
                        <LinearLayout
                            android:orientation="horizontal"
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="1">
                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:gravity="center"
                                />
                            <TextView
                                android:id="@+id/pad_drawing_down"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:gravity="center"
                                android:background="@drawable/square_border"
                                android:tag="47"
                                android:text="S"/>
                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:gravity="center"/>
                        </LinearLayout>
                    </LinearLayout>
                </FrameLayout>
                <!--  设置部分   -->
                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1">
                    <!--  名称设置以及按钮创建   -->
                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="100">
                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:text="名称:"
                            android:gravity="center"
                            android:layout_weight="2"/>
                        <EditText
                            android:id="@+id/add_element_name"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:text="A1"
                            android:layout_weight="3"/>
                        <Button
                            android:id="@+id/add_element_button"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="2"
                            android:text="确定"/>
                    </LinearLayout>
                    <!--  按钮类型选择部分   -->
                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="100">
                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:text="按键类型："
                            android:gravity="center"
                            android:layout_weight="1"/>
                        <Spinner
                            android:id="@+id/select_element_type"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="3"
                            android:entries="@array/button_name"
                            />
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="100">
                        <Button
                            android:id="@+id/delete_element"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="100"
                            android:text="删除按键"/>
                        <Button
                            android:id="@+id/edit_element"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="100"
                            android:text="编辑按键"/>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
            <!--  下半部分   -->
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="3">
                <!--  键盘部分   -->
                <include layout="@layout/keyboard_layout"/>
            </LinearLayout>
        </LinearLayout>
        <!--    setting3    -->
        <LinearLayout
            android:id="@+id/advance_setting_3_linear_layout"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="gone">
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
    <!-- resize seekbar -->
    <FrameLayout
        android:id="@+id/resize_element_windows"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:visibility="gone">
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="500dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:background="@color/advance_setting_background">
            <SeekBar
                android:id="@+id/resize_element_windows_seekbar"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="100"
                android:max="600"
                android:min="20" />
            <Button
                android:id="@+id/resize_element_windows_button"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="20"
                android:text="保存"/>
        </LinearLayout>
    </FrameLayout>
    <!--  重命名窗口  -->
    <FrameLayout
        android:id="@+id/rename_layout_window_background"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#C0303030"
        android:visibility="gone">
        <!--   浮动窗口   -->
        <FrameLayout
            android:layout_width="300dp"
            android:layout_height="200dp"
            android:layout_gravity="center"
            android:background="#202020">
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center">
                <EditText
                    android:id="@+id/rename_window_edittext"
                    android:layout_width="200dp"
                    android:layout_height="50dp"/>
                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="200dp"
                    android:layout_height="50dp">
                    <Button
                        android:id="@+id/rename_window_confirm_button"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:text="确认"/>
                    <Button
                        android:id="@+id/rename_window_cancel_button"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:text="取消"/>
                </LinearLayout>
            </LinearLayout>
        </FrameLayout>
    </FrameLayout>
<!--  新增布局window  -->
    <FrameLayout
        android:id="@+id/add_layout_window_background"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#C0303030"
        android:visibility="gone">
        <!--   浮动窗口   -->
        <FrameLayout
            android:layout_width="300dp"
            android:layout_height="200dp"
            android:layout_gravity="center"
            android:background="#202020">
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center">
                <EditText
                    android:id="@+id/add_window_edittext"
                    android:layout_width="200dp"
                    android:layout_height="50dp"/>
                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="200dp"
                    android:layout_height="50dp">
                    <Button
                        android:id="@+id/add_window_confirm_button"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:text="确认"/>
                    <Button
                        android:id="@+id/add_window_cancel_button"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:text="取消"/>
                </LinearLayout>

            </LinearLayout>
        </FrameLayout>
    </FrameLayout>
    <!-- 删除element窗口 -->
    <FrameLayout
        android:id="@+id/delete_element_confirm_windows"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#C0303030"
        android:visibility="gone">
        <!--   浮动窗口   -->
        <FrameLayout
            android:layout_width="300dp"
            android:layout_height="200dp"
            android:layout_gravity="center"
            android:background="#202020">
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center">
                <TextView
                    android:id="@+id/delete_element_confirm_windows_text"
                    android:layout_width="200dp"
                    android:layout_height="50dp"
                    android:text="是否删除:"
                    android:textSize="20dp"
                    android:gravity="center"/>
                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <Button
                        android:id="@+id/delete_element_confirm_windows_confirm_button"
                        android:layout_width="100dp"
                        android:layout_height="50dp"
                        android:text="确认"/>
                    <Button
                        android:id="@+id/delete_element_confirm_windows_cancel_button"
                        android:layout_width="100dp"
                        android:layout_height="50dp"
                        android:text="取消"/>
                </LinearLayout>
            </LinearLayout>
        </FrameLayout>
    </FrameLayout>
<!--  删除布局window  -->
    <FrameLayout
        android:id="@+id/delete_layout_confirm_windows"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#C0303030"
        android:visibility="gone">
        <!--   浮动窗口   -->
        <FrameLayout
            android:layout_width="300dp"
            android:layout_height="200dp"
            android:layout_gravity="center"
            android:background="#202020">
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center">
                <TextView
                    android:id="@+id/delete_layout_confirm_windows_text"
                    android:layout_width="200dp"
                    android:layout_height="50dp"
                    android:text="是否删除:"
                    android:textSize="20dp"
                    android:gravity="center"/>
                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <Button
                        android:id="@+id/delete_layout_confirm_windows_confirm_button"
                        android:layout_width="100dp"
                        android:layout_height="50dp"
                        android:text="确认"/>
                    <Button
                        android:id="@+id/delete_layout_confirm_windows_cancel_button"
                        android:layout_width="100dp"
                        android:layout_height="50dp"
                        android:text="取消"/>
                </LinearLayout>
            </LinearLayout>
        </FrameLayout>
    </FrameLayout>
    <!-- 删除模式退出按钮 -->
    <Button
        android:id="@+id/delete_element_exit_button"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="20dp"
        android:text="退出"
        android:visibility="gone"/>
</FrameLayout>